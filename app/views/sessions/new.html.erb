<div class="container-fluid">
<h1> Log In </h1>

    <% if @message %>
    <div class="alert alert-danger" role="alert">
    <%=@message %>
    </div>
    <% end %>

    <div class="card">
    <div class="card-body">
    <!-- Login form -->
    <%= form_with(url: '/login', local:true) do |form| %>
    <div class = "form-group">
    <%= form.label :username %>
    <%= form.text_field :username, class: 'form-control' %>
    </div>

    <div class = "form-group">
    <%= form.label :password %>
    <%= form.password_field :password_hash, class: 'form-control' %>
    </div>

    <div class="actions">
    <%= form.submit "Submit", class: "btn btn-secondary" %>
    </div>

    <% end %>
    </div>
    </div>

</div>
</div>